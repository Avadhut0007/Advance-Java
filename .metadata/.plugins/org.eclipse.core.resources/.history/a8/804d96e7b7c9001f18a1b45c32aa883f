package edu.jspiders.multithreading.resource;

public class Product {
	
	private int quantity;
	
	
	
	public Product(int quantity) {
		super();
		this.quantity = quantity;
	}

	public void consume() throws InterruptedException {
		if(quantity > 0 )
		this.quantity--;
		else
			wait();
	}
	
	public void produce() {
		this.quantity++;
		
	}

}
